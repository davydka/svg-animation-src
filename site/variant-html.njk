---
layout: layouts/base
pagination:
  data: svgs.animations.list
  size: 1
  alias: svg
permalink: "{{svg.url}}"
navLinks:
  'about': '/#about'
  'source code': 'https://github.com/ndrwhr/svg-animations'
  'more experiments': 'http://andrew.wang-hoyer.com'
---

{% set breadcrumbs = ([
  {
    text: 'HOME',
    href: svg.homeUrl
  }, {
    text: 'ANIMATION ' + svg.dirName,
    href: svg.dir.url
  }, {
    text: 'VARIANT ' + svg.fileName
  }
]) %}

{% include "breadcrumbs.njk" %}

<div class="variant">
  <div class="variant__main">
    {% if svg.previous %}
      <a href="{{svg.previous.url}}" class="variant__nav">PREV</a>
    {% else %}
      <span class="variant__nav variant__nav--disabled">PREV</span>
    {% endif %}

    <div class="variant__anim">
      {{svg.minXML | safe}}
    </div>

    {% if svg.next %}
      <a href="{{svg.next.url}}" class="variant__nav">NEXT</a>
    {% else %}
      <span class="variant__nav variant__nav--disabled">NEXT</span>
    {% endif %}
  </div>

  {% if svg.desc %}
    {{ svg.desc | safe }}
  {% endif %}

  {% if svg.attribution %}
    <p>{{ svg.attribution | safe }}</p>
  {% endif %}

  <h2 class="variant__variants-header">OTHER VARIANTS</h2>
  <ul class="variant__variants">
    {% set grid = ({dirIndex: svg.dir.index, excludeFileName: svg.fileName, showLabel: true}) %}
    {% include "grid.njk" %}
  </ul>
</div>

{% include "nav.njk" %}
